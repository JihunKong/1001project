# Test Environment Configuration
# Used by docker-compose.test.yml for isolated E2E testing

# Database (Test PostgreSQL in Docker)
DATABASE_URL=postgresql://test_user:testpass123@postgres-test:5432/test_db
DB_USER=test_user
DB_PASSWORD=testpass123

# Redis (Test Redis in Docker)
REDIS_URL=redis://:testredispass@redis-test:6379
REDIS_HOST=redis-test
REDIS_PORT=6379
REDIS_PASSWORD=testredispass

# NextAuth
NEXTAUTH_URL=http://localhost:8002
NEXTAUTH_SECRET=test-secret-key-for-testing-only-do-not-use-in-production

# Email (Mock for testing)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=test@1001stories.org
EMAIL_SERVER_PASSWORD=mock-test-password
EMAIL_FROM=test@1001stories.org

# AI Services (Disabled for testing)
OPENAI_API_KEY=

# Feature Flags
ENABLE_AI_FEATURES=false
ENABLE_BOOK_CLUBS=true
ENABLE_VOCABULARY=true
TEST_MODE_ENABLED=true
ALLOW_PASSWORD_LOGIN=true

# Node Environment
NODE_ENV=test
DISABLE_REDIS=false
