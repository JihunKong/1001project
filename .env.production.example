# Production Environment Variables for v3-ui-overhaul
# Copy this file to .env on the production server and fill in the actual values

# Database Configuration
DATABASE_URL="postgresql://postgres:YOUR_SECURE_PASSWORD@postgres:5432/stories_db"
POSTGRES_DB="stories_db"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="YOUR_SECURE_PASSWORD"

# NextAuth Configuration
NEXTAUTH_URL="https://1001stories.seedsofempowerment.org"
NEXTAUTH_SECRET="YOUR_PRODUCTION_SECRET_KEY_HERE"

# Email Configuration (Nodemailer with Gmail)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@1001stories.org"

# Application Settings
NODE_ENV="production"
NEXT_PUBLIC_API_URL="https://1001stories.seedsofempowerment.org"

# AI Configuration (REQUIRED)
OPENAI_API_KEY="your-openai-api-key"
UPSTAGE_API_KEY="your-upstage-api-key"

# Optional: Monitoring and Analytics
# SENTRY_DSN="your-sentry-dsn"
# GA_TRACKING_ID="your-google-analytics-id"

# S3 File Storage Configuration (Optional - defaults to local storage)
# USE_S3_STORAGE="true"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-2"
# AWS_S3_BUCKET="1001-stories-books"

# Redis Configuration (REQUIRED)
REDIS_URL="redis://:YOUR_REDIS_PASSWORD@redis:6379"
REDIS_PASSWORD="YOUR_REDIS_PASSWORD"

# Feature Flags for v3
ENABLE_ESL_FEATURES="true"
ENABLE_SEEDS_THEME="true"
DISABLE_ECOMMERCE="true"