# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://1001stories.seedsofempowerment.org

# NextAuth Configuration (REQUIRED)
NEXTAUTH_URL=https://1001stories.seedsofempowerment.org
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-here

# Database Configuration (REQUIRED)
# For Docker: use 'postgres' as host, for local: use 'localhost'
DATABASE_URL=postgresql://stories_user:your_db_password@postgres:5432/stories_db
DB_USER=stories_user
DB_PASSWORD=your_db_password

# Email Service Configuration (REQUIRED for authentication)
EMAIL_SERVICE_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
# For Gmail: use app-specific password (not your regular password)
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@1001stories.org

# Legacy mail password (for backward compatibility)
MAIL_PASSWORD=your-app-specific-password

# Demo Mode Settings (optional)
DEMO_MODE_ENABLED=false
DEMO_BYPASS_EMAIL=false
DEMO_ACCOUNTS_ENABLED=false
NEXT_PUBLIC_DEMO_MODE=false

# Security Settings (recommended for production)
SECURE_COOKIES=true
CSRF_PROTECTION=true
DISABLE_CSRF_CHECK=false
ENABLE_RATE_LIMITING=true
LOGIN_ATTEMPT_LIMIT=5
LOGIN_WINDOW_MS=900000
ENABLE_AUDIT_LOGGING=true
LOG_FAILED_ATTEMPTS=true

# PgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@1001stories.org
PGADMIN_PASSWORD=admin123

# OAuth Providers (optional - for future use)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_ID=
APPLE_TEAM_ID=
APPLE_PRIVATE_KEY=
APPLE_KEY_ID=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Payment Integration (optional - for future use)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# File Storage (optional - for future use)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-2
AWS_BUCKET_NAME=1001-stories-uploads