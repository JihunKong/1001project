{
  "name": "1001-stories",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "prebuild": "node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('package.json','utf8'));const info={version:pkg.version,buildTime:new Date().toISOString(),buildTimestamp:Date.now(),gitCommit:process.env.GIT_COMMIT||'unknown',environment:process.env.NODE_ENV||'development'};fs.writeFileSync('public/build-info.json',JSON.stringify(info,null,2));fs.writeFileSync('lib/build-info.json',JSON.stringify(info,null,2));console.log('Build info generated:',info);\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=tests/",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test",
    "test:e2e:local": "npx playwright test",
    "test:e2e:headed": "docker-compose -f docker-compose.test.yml run --rm -e HEADLESS=false playwright npx playwright test",
    "test:auth": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test tests/e2e/auth",
    "test:rbac": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test tests/e2e/rbac",
    "test:performance": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test --project=performance",
    "test:a11y": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test --project=accessibility",
    "test:visual": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test --project=visual",
    "test:mobile": "docker-compose -f docker-compose.test.yml run --rm playwright npx playwright test --project=mobile-chrome --project=mobile-safari",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d && docker-compose -f docker-compose.test.yml exec test-app npx prisma migrate deploy && docker-compose -f docker-compose.test.yml exec test-app npx prisma db seed",
    "test:cleanup": "docker-compose -f docker-compose.test.yml down -v",
    "test:report": "npx playwright show-report",
    "test:debug": "PWDEBUG=1 npx playwright test",
    "test:scenarios": "npx playwright test tests/scenarios/",
    "test:scenarios:writer": "npx playwright test tests/scenarios/writer/",
    "test:scenarios:teacher": "npx playwright test tests/scenarios/teacher/",
    "test:scenarios:learner": "npx playwright test tests/scenarios/learner/",
    "test:scenarios:story-manager": "npx playwright test tests/scenarios/story-manager/",
    "test:scenarios:book-manager": "npx playwright test tests/scenarios/book-manager/",
    "test:scenarios:content-admin": "npx playwright test tests/scenarios/content-admin/",
    "test:scenarios:institution": "npx playwright test tests/scenarios/institution/",
    "test:scenarios:admin": "npx playwright test tests/scenarios/admin/",
    "test:cross-role": "npx playwright test tests/scenarios/cross-role/",
    "test:smoke": "npx playwright test tests/smoke/",
    "test:smoke:prod": "BASE_URL=https://1001stories.seedsofempowerment.org npx playwright test tests/smoke/",
    "rls:apply": "./scripts/apply-rls.sh",
    "rls:test": "npx tsx scripts/test-rls.ts",
    "rls:status": "psql $DATABASE_URL -c 'SELECT * FROM check_rls_status();'"
  },
  "dependencies": {
    "@google/genai": "^1.28.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.13.0",
    "@tanstack/react-table": "^8.10.0",
    "@tiptap/extension-character-count": "^2.26.3",
    "@tiptap/extension-underline": "^2.26.3",
    "@tiptap/react": "^2.26.3",
    "@tiptap/starter-kit": "^2.26.3",
    "@types/bull": "^3.15.9",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/papaparse": "^5.3.14",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "bullmq": "^5.63.0",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.7",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.23.22",
    "js-cookie": "^3.0.5",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "multer": "^2.0.2",
    "next": "^15.5.9",
    "next-auth": "^4.24.11",
    "next-i18next": "^15.4.2",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "papaparse": "^5.4.0",
    "pg": "^8.16.3",
    "react": "^19.1.2",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.1.2",
    "react-dropzone": "^14.2.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^10.1.0",
    "react-pdf": "^10.2.0",
    "redis": "^4.7.1",
    "sharp": "^0.33.0",
    "swr": "^2.3.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-rtl": "^0.9.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.7"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.54.2",
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "20.19.21",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^15.4.10",
    "postcss": "^8.5.6",
    "prisma": "^6.13.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "5.9.3"
  }
}
